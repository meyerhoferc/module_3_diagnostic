<div class="container">
  <h3>Stations within 6 miles of <%= @zipcode %></h3>
  <div class="legend">
    <h3>LPG - Propane, ELEC - Electric</h3>
  </div>
</div>

<div class="stations row">
  <% @stations.each do |station| %>
    <div class="<%= station.name.split.last %> container">
      <p>Station: <%= station.name %></p>
      <p>Distance: <%= station.distance %> miles</p>
      <p>Address: <%= station.address %></p>
      <p>Fuel Types Available: <%= station.fuel_types %></p>
      <p>Times of Operation: <%= station.access_times %></p>
      <p>-------------------------------------------------------------------------------------------------------------------</p>
    </div>
  <% end %>
</div>
